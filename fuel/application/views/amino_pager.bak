    <body>
        <div id = "results_table">
            {{ test }}
            <table id='example1' class='table table-striped table-bordered' style='width:100%'>
                <thead> 
                    <tr>
                        <headercomponent
                            v-for = "item in headers"
                        >
                        </headercomponent>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for = "row in rows">
                        <rowcomponent
                            v-for = "cell in row"
                        >
                        </rowcomponent>
                    </tr>
                </tbody>
            </table>
        </div>
      


    </body>
    <script type = "text/javascript">
        Vue.component('headercomponent',{
            template: '<th class="th-sm">{{ item }}</th>';
        });

        Vue.component('rowcomponent',{
            template: '<td>{{ cell }}</td>'
        });

        vm = new Vue({
            el: '#results_table',
            data: {
                test: "This is a Test",
                headers : ["Name","Position","Office","Age","Start date","Salary"],
